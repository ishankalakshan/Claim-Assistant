<Page
    x:Name="pageRoot"
    x:Class="ClaimAssistantApp.Views.claimForm2"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClaimAssistantApp.Views"
    xmlns:common="using:ClaimAssistantApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">New Claim</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">

            <StackPanel Orientation="Vertical" Width="620" Margin="40,5,20,10">
                <TextBlock Text="Driver Details" FontSize="30" FontStyle="Italic"  Margin="2,0,0,10" />
                <TextBlock HorizontalAlignment="Left" 
            		Text="Is the driver owner?"                                           
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rdbYes" Content="Yes"/>
                    <RadioButton x:Name="rdbNo" Content="No"/>
                </StackPanel>
                <TextBlock HorizontalAlignment="Left" 
            		Text="Driver Name"                                           
            		FontSize="16"                                       
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBox x:Name="txtDrivername" 
            		HorizontalAlignment="Stretch"                                          
            		FontSize="16"
            		Background="Transparent"
            		Foreground="Gray"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" 
            		Text="License" 
            		FontSize="16"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBox x:Name="txtLicense" 
            		HorizontalAlignment="Stretch"                                          
            		FontSize="16"
            		Background="Transparent"
            		Foreground="Gray"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" 
            		Text="Categories" 
            		FontSize="16"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBox x:Name="txtCategories" 
            		HorizontalAlignment="Stretch"                                                                                  
            		FontSize="16" 
            		Background="Transparent"
            		Foreground="Gray"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" 
            		Text="Expire Date"                                           
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <DatePicker Name="dpExpireDate"
                            HorizontalAlignment="Stretch"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="Gray"
                            FontFamily="Segoe UI Light"/>
                <TextBlock HorizontalAlignment="Left" 
            		Text="NIC"                                           
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBox x:Name="txtNic" 
            		HorizontalAlignment="Stretch"  
            		FontSize="16" 
            		Background="Transparent"
            		Foreground="Gray"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>               
                <TextBlock HorizontalAlignment="Left" 
            		Text="Date of Purchase"                                           
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <DatePicker x:Name="dpPurchaseDate"
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"/>
                <TextBlock HorizontalAlignment="Left" 
            		Text="Vehicle used for?"                                           
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <ComboBox x:ConnectionId='2' x:Name="cmbVehiclePurpose"                                           
            		FontSize="16" 
            		HorizontalAlignment="Stretch"
            		IsEnabled="True"
            		Background="Transparent"
            		Foreground="Gray"
            		FontFamily="Segoe UI Light"                                                       
                                          >
                    <x:String>Private Purpose</x:String>
                    <x:String>Own Business</x:String>
                    <x:String>Compnay Owned</x:String>
                    <x:String>Rented</x:String>

                </ComboBox>

                <TextBlock HorizontalAlignment="Left" 
            		x:Name="tbrentCompny"
            		Text="Rent car Company"                                           
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBox x:Name="txtRentcarCompany" 
            		HorizontalAlignment="Stretch"    
            		FontSize="16" 
            		Background="Transparent"
            		Foreground="Gray"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBlock x:Name="tbAmount" 
            		HorizontalAlignment="Left" 
            		Text="Rent Amount"                                           
            		FontSize="16"                                                                                    
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap"/>
                <TextBox x:Name="txtRentAmount" 
            		HorizontalAlignment="Stretch"    
            		FontSize="16" 
            		Background="Transparent"
            		Foreground="Gray"
            		FontFamily="Segoe UI Light"
            		TextWrapping="Wrap" 
            		InputScope="Number"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Width="630">
                <TextBlock HorizontalAlignment="Left" 
        			Text="3rd Party Damages"  
        			FontSize="30" FontStyle="Italic"  Margin="2,0,0,10"/>
                <TextBlock HorizontalAlignment="Left" 
        			Text="Victim Name"                                           
        			FontSize="16"                                       
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBox x:Name="txtVictimName" 
        			HorizontalAlignment="Stretch"                                          
        			FontSize="16"
        			Background="Transparent"
        			Foreground="Gray"
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" 
        			Text="Address" 
        			FontSize="16"
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBox x:Name="txtVictimAddress" 
        			HorizontalAlignment="Stretch"                                          
        			FontSize="16"
        			Background="Transparent"
        			Foreground="Gray"
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" 
        			Text="Damage Nature" 
        			FontSize="16"
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBox x:Name="txtdamageNature" 
        			HorizontalAlignment="Stretch"                                        
        			FontSize="16" 
        			Background="Transparent"
        			Foreground="Gray"
        			Height="100"
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" 
        			Text="Third party Claimant"  
        			Margin="10"
        			FontSize="16"                                          
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBox x:Name="txt3rdPartyClaimant" 
        			HorizontalAlignment="Stretch" 
        			FontSize="16" 
        			Background="Transparent"
        			Foreground="Gray"
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" 
        			Text="Amount Claimed Rs."                                           
        			FontSize="16"                                                                                    
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"/>
                <TextBox x:Name="txt3rdAmountClaimed" 
        			HorizontalAlignment="Stretch"  
        			FontSize="16" 
        			Background="Transparent"
        			Foreground="Gray"
        			FontFamily="Segoe UI Light"
        			TextWrapping="Wrap"
        			InputScope="Number"/>

                <Button x:ConnectionId='1' x:Name="btnNextStep3" HorizontalAlignment="Right" Margin="0,150" Width="150"                            Content="Next"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>

