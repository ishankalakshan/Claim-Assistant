<Page
    x:Name="pageRoot"
    x:Class="ClaimAssistantApp.Views.claimForm3"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClaimAssistantApp.Views"
    xmlns:common="using:ClaimAssistantApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">New Claim</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Width="620" Margin="40,5,20,10">
                <TextBlock Text="Attach Photos" FontSize="30" FontStyle="Italic"  Margin="2,0,0,10" ></TextBlock>
                <Image Width="120" 
                                   Height="150" 
                                   HorizontalAlignment="Left" 
                                   x:Name="imagePreivew" 
                                   Source="Assets/TowTruck-icon.png" />
                <Button x:Name="PhotoButton" Content="Choose Image" Height="44" Width="147"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Width="650" HorizontalAlignment="Left" Margin="12,0,0,0">
                <StackPanel Orientation="Vertical" Width="630">

                    <TextBlock HorizontalAlignment="Left" 
                                           Text="Payments"  
                                     FontSize="30" FontStyle="Italic"  Margin="2,0,0,10"/>
                    <TextBlock HorizontalAlignment="Left" 
                                           Text="Sparepart Category" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                    <ComboBox x:ConnectionId='1' Name="cmbSparePartCategory"                                           
                                          FontSize="16" 
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="True"
                                          Background="Transparent"
                                          Foreground="Gray"
                                          FontFamily="Segoe UI Light"
                                                                                                  
                                          SelectedValuePath="spareId">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding spareId}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" FontSize="15" TextTrimming="CharacterEllipsis" Foreground="Black" />
                                    <TextBlock Text="{Binding spareCatergory}" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" FontSize="20"  Foreground="Black"/>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left" 
                                           Text="Manufacturer" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                    <ComboBox x:ConnectionId='2' Name="cmbSparepartManufacturer"                                           
                                          FontSize="16" 
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="True"
                                          Background="Transparent"
                                          Foreground="Gray"
                                          FontFamily="Segoe UI Light" 
                                          DisplayMemberPath="manufacturerName"
                                          SelectedValuePath="manufacturerId"
                                                                                                      >
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left" 
                                           Text="Sparepart" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"
                                            Foreground="Gray"/>                                         
                    <ComboBox Name="cmbSparepart"                                           
                                          FontSize="16" 
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="True"
                                          Background="Transparent"
                                          Foreground="Gray"
                                          FontFamily="Segoe UI Light" 
                                          SelectedValuePath="sparepartId">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"></ColumnDefinition>
                                        <ColumnDefinition Width="100"></ColumnDefinition>
                                        <ColumnDefinition Width="200"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding sparepartName}"  
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Grid.Column="0" 
                                               FontSize="16" 
                                               Foreground="Black" >                                   
                                    </TextBlock>
                                    <TextBlock  
                                               Grid.Column="1" 
                                               VerticalAlignment="Center"  
                                               HorizontalAlignment="Center" 
                                               FontSize="16"  
                                               Foreground="Black">
                                    <Run Text="Year : "></Run>
                                    <Run Text="{Binding spareManufacYear}"></Run>
                                    </TextBlock>
                                    <TextBlock   
                                               Grid.Column="2" 
                                               VerticalAlignment="Center"  
                                               HorizontalAlignment="Center" 
                                               FontSize="16"  
                                               Foreground="Black">
                                    <Run Text="Rs "></Run>
                                    <Run Text="{Binding spareUnitCost}"></Run>
                                    <Run Text="/="></Run>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0,15,0,0">                  
                        <Button x:ConnectionId='4' Name="btnAddPart"
                                HorizontalAlignment="Right"
                                Content="Add" 
                                                        />
                        <Button x:ConnectionId='5' x:Name="btnRemove"
                        	      HorizontalAlignment="Right"
                        	      Content="Remove" 
                                                         />
                    </StackPanel>               
                    <StackPanel Name="sparelist">
                        <ListBox Name="lstboxSparelist" 
                                 Background="Transparent"
                                 FontSize="16"
                                 FontFamily="Segoe UI Light"
                                 Foreground="White">
                        </ListBox>
                    </StackPanel>
                    <StackPanel Name="stckFinalcost" Margin="0,15,0,0">
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Spare parts total cost" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtSparecost" 
                                         HorizontalAlignment="Stretch"                                          
                                         FontSize="16"
                                        IsEnabled="False"
                                        Text="34 000"
                                         Background="Transparent"
                                         Foreground="Gray"
                                         FontFamily="Segoe UI Light"
                                         TextWrapping="Wrap"/>
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Garage Costs" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtgarageCost" 
                                         HorizontalAlignment="Stretch"                                          
                                         FontSize="16"
                                         Background="Transparent"
                                         Foreground="Gray"
                                         FontFamily="Segoe UI Light"
                                         TextWrapping="Wrap"/>
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Any Other Costs" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtAnyOtherReason" 
                                         HorizontalAlignment="Stretch"                                          
                                         FontSize="16"
                                         Background="Transparent"
                                         Foreground="Gray"
                                         FontFamily="Segoe UI Light"
                                         TextWrapping="Wrap"/>
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Amount Payable" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtAmountPayable" 
                                 HorizontalAlignment="Stretch" 
                                 Text="30 000"
                                 IsEnabled="False"
                                 FontSize="16"
                                 FontFamily="Segoe UI Light"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    <Button x:ConnectionId='3' Name="btnSubmit" HorizontalAlignment="Right" Margin="0,150" Width="150"                        >Submit</Button>
                </StackPanel>
            </ScrollViewer>



        </StackPanel>
    </Grid>
</Page>

