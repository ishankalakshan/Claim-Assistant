<Page
    x:Name="pageRoot"
    x:Class="ClaimAssistantApp.Views.claimForm3"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClaimAssistantApp.Views"
    xmlns:common="using:ClaimAssistantApp.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">New Claim</x:String>
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/bg-menus.jpg"
                    Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="{StaticResource AppName}" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="0,0,30,40"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Width="620" Margin="40,5,20,10">
                <TextBlock Text="Attach Photos" FontSize="30" FontStyle="Italic"  Margin="2,0,0,10" ></TextBlock>
                <ListBox Name="ImageListBox">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" >
                                <Image Height="100" Width="100" Source="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button x:ConnectionId='6' x:Name="btnChoosePhotos"                               Content="Choose Image" Height="44" Width="147"/>
                <Button x:ConnectionId='7' x:Name="btnRemovePhoto"                              Content="Remove" Height="44" Width="147"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Width="650" HorizontalAlignment="Left" Margin="12,0,0,0">
                <StackPanel Orientation="Vertical" Width="630">

                    <TextBlock HorizontalAlignment="Left" 
                                           Text="Payments"  
                                     FontSize="30" FontStyle="Italic"  Margin="2,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" 
                                           Text="Sparepart Category" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                            <ComboBox x:ConnectionId='5' Name="cmbSparePartCategory"                                           
                                          FontSize="16" 
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="True"
                                          Background="Transparent"
                                          Foreground="White"
                                          Width="275"
                                          FontFamily="Segoe UI Light"
                                                                                                  
                                          DisplayMemberPath="spareCatergory"
                                          SelectedValuePath="spareCatergory">
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="75,0,0,0" FlowDirection="RightToLeft">
                            <TextBlock HorizontalAlignment="Left" 
                                           Text="Manufacturer" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                            <ComboBox x:ConnectionId='4' Name="cmbSparepartManufacturer"                                           
                                          FontSize="16" 
                                          SelectedValue=""
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="True"
                                          Width="275"
                                          Background="Transparent"
                                          Foreground="White"
                                          FontFamily="Segoe UI Light"
                                                                                                      
                                          DisplayMemberPath="manufacturerName"
                                          SelectedValuePath="manufacturerName"/>
                        </StackPanel>
                    </StackPanel>        
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <StackPanel Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Left" 
                                           Text="Sparepart" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"
                                           Foreground="White"/>
                            <ComboBox Name="cmbSparepart"                                           
                                          FontSize="16" 
                                          HorizontalAlignment="Stretch"
                                          IsEnabled="True"
                                          Width="500"
                                          Background="Transparent"
                                          Foreground="White"
                                          FontFamily="Segoe UI Light" 
                                          SelectedValuePath="sparepartId">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="300"></ColumnDefinition>
                                                <ColumnDefinition Width="100"></ColumnDefinition>
                                                <ColumnDefinition Width="200"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding sparepartName}"  
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Grid.Column="0" 
                                               FontSize="16" 
                                               Foreground="Black" >
                                            </TextBlock>
                                            <TextBlock  
                                               Grid.Column="1" 
                                               VerticalAlignment="Center"  
                                               HorizontalAlignment="Center" 
                                               FontSize="16"  
                                               Foreground="Black">
                                    <Run Text="Year : "></Run>
                                    <Run Text="{Binding spareManufacYear}"></Run>
                                            </TextBlock>
                                            <TextBlock   
                                               Grid.Column="2" 
                                               VerticalAlignment="Center"  
                                               HorizontalAlignment="Center" 
                                               FontSize="16"  
                                               Foreground="Black">
                                    <Run Text="Rs "></Run>
                                    <Run Text="{Binding spareUnitCost}"></Run>
                                    <Run Text="/="></Run>
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="63,0,0,0" FlowDirection="RightToLeft">
                            <TextBlock HorizontalAlignment="Left" 
                                           Text="Quantity" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                            <TextBox x:Name="txtQuantity" 
                            	HorizontalAlignment="Stretch"                                          
                            	FontSize="16"
                            	InputScope="Number"
                            	Background="Transparent"
                            	Foreground="White"
                            	FontFamily="Segoe UI Light"
                            	TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0,15,0,0">                  
                        <Button x:ConnectionId='2' Name="btnAddPart"
                                HorizontalAlignment="Right"
                                Content="Add" 
                                                        />
                        <Button x:ConnectionId='3' x:Name="btnRemove"
                        	      HorizontalAlignment="Right"
                        	      Content="Remove" 
                                                         />
                    </StackPanel>               
                    <StackPanel Name="sparelist">
                        <ListBox Name="lstboxSparelist" 
                                 Background="Transparent"
                                 FontSize="16"
                                 FontFamily="Segoe UI Light"
                                 Foreground="White">
                        </ListBox>
                    </StackPanel>
                    <StackPanel Name="stckFinalcost" Margin="0,15,0,0">
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Spare parts total cost" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtSparecost" 
                                         HorizontalAlignment="Stretch"                                          
                                         FontSize="16"
                                         IsEnabled="False"
                                         Text="0"
                                         Background="Transparent"
                                         Foreground="White"
                                         FontFamily="Segoe UI Light"
                                         TextWrapping="Wrap"/>
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Garage Costs" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtgarageCost" 
                                         HorizontalAlignment="Stretch"                                          
                                         FontSize="16"
                                         Background="Transparent"
                                         Foreground="White"
                                         Text="0"
                                         FontFamily="Segoe UI Light"
                                         TextWrapping="Wrap"/>
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Any Other Costs" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtOtherCosts" 
                                         HorizontalAlignment="Stretch"                                          
                                         FontSize="16"
                                         Text="0"
                                         Background="Transparent"
                                         Foreground="White"
                                         FontFamily="Segoe UI Light"
                                         TextWrapping="Wrap"/>
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Deductions" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtDeductions" 
                                         HorizontalAlignment="Stretch"                                          
                                         FontSize="16"
                                         Background="Transparent"
                                         Foreground="White"
                                         Text="0"
                                         FontFamily="Segoe UI Light"
                                         TextWrapping="Wrap"/>
                        <TextBlock HorizontalAlignment="Left" 
                                           Text="Amount Payable" 
                                           FontSize="16"
                                           FontFamily="Segoe UI Light"
                                           TextWrapping="Wrap"/>
                        <TextBox Name="txtAmountPayable" 
                                 HorizontalAlignment="Stretch" 
                                 Text="30 000"
                                 IsEnabled="False"
                                 FontSize="16"
                                 FontFamily="Segoe UI Light"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    <Button x:ConnectionId='1' Name="btnSubmit" HorizontalAlignment="Right" Margin="0,150" Width="150"                        >Submit</Button>
                </StackPanel>
            </ScrollViewer>



        </StackPanel>
    </Grid>
</Page>

